---
type Props = {
  prevUrl?: string;
  nextUrl?: string;
};

const { prevUrl, nextUrl } = Astro.props;
---

<div class="flex gap-2 my-3 justify-between">
  <div>
    {
      prevUrl && (
        <a href={prevUrl} class="">
          ←
        </a>
      )
    }
  </div>

  <div>
    {
      nextUrl && (
        <a href={nextUrl} class="">
          →
        </a>
      )
    }
  </div>
</div>
