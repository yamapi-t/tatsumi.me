---
import SearchForm from "./SearchForm.astro";
---

<!-- Modal toggle -->
<button
  data-modal-target="default-modal"
  data-modal-toggle="default-modal"
  type="button"
  transition:persist
>
  <svg
    class="size-5"
    stroke="currentColor"
    stroke-width="1.5"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 50 50"
  >
    <path
      d="M 21 3 C 11.621094 3 4 10.621094 4 20 C 4 29.378906 11.621094 37 21 37 C 24.710938 37 28.140625 35.804688 30.9375 33.78125 L 44.09375 46.90625 L 46.90625 44.09375 L 33.90625 31.0625 C 36.460938 28.085938 38 24.222656 38 20 C 38 10.621094 30.378906 3 21 3 Z M 21 5 C 29.296875 5 36 11.703125 36 20 C 36 28.296875 29.296875 35 21 35 C 12.703125 35 6 28.296875 6 20 C 6 11.703125 12.703125 5 21 5 Z"
    ></path>
  </svg>
</button>

<!-- Main modal -->
<div
  id="default-modal"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
  transition:persist
>
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 p-4">
      <!-- Modal header -->
      <SearchForm />
    </div>
  </div>
</div>

<script>
  import { Modal, type ModalOptions } from "flowbite";
  const options = {
    placement: "center",
    backdrop: "dynamic",
    backdropClasses: "bg-gray-900/50 dark:bg-gray-900/80 fixed inset-0 z-40",
  } satisfies ModalOptions;

  const $targetEl = document.getElementById("default-modal");

  new Modal($targetEl, options);
</script>
